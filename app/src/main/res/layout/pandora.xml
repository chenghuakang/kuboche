<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/pandora_btn1"
        android:background="@drawable/pandora1"
        android:layout_margin="30dp"
        android:id="@+id/pandora_btn1"/>     <!--格式控制-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:text="@string/pandora_btn2"
        android:background="@drawable/pandora1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/pandora_btn2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/pandora_btn3"
        android:background="@drawable/pandora1"
        android:layout_margin="30dp"
        android:id="@+id/pandora_btn3"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#ffffff"/>

</LinearLayout>

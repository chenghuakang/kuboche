<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/framework"
    android:orientation="vertical">

    <ImageView
        style="@style/image"
        android:src="@drawable/head1" />

    <View style="@style/coverRoomView" />

    <TextView
        style="@style/centerEditView"
        android:text="请回答密保问题："
        android:textColor="#0097A7" />

    <TextView
        android:id="@+id/securityQuestion"
        style="@style/centerEditView" />

    <EditText
        android:id="@+id/securityAnswer1"
        style="@style/centerEditView"
        android:hint="@string/securityAnswer" />

    <Button
        style="@style/centerLongButton"
        android:background="@drawable/btn_common"
        android:onClick="password3"
        android:text="@string/submit" />


    <View style="@style/coverRoomView" />

</LinearLayout>